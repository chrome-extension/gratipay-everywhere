{
	"name": "Gittip Everywhere",
	"version": "0.2",
	"manifest_version": 2,
	"description": "The unofficial Gittip addon for your (currently chrome) browser, we enable Gittip tipping icons on many of your favorite sites.",
	"update_url": "http://clients2.google.com/service/update2/crx",
	"icons": {
		"16": "icons/gittip16.png",
		"48": "icons/gittip48.png",
		"128": "icons/gittip128.png",
		"256": "icons/gittip256.png"
	},
	"browser_action": {
		"default_icon": "icons/gittip48.png"
	},
	"permissions": [
		"https://github.com/*"
	],
	"content_scripts": [ 
		{
			"css": [ "button/button.css" ],
			"js": [ "websites/github.js" ],
			"matches": [ "https://github.com/*" ]
		}
	]
}